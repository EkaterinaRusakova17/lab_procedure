#include <iostream>
using namespace std;

double sredAr(int *arr, int size) {
  double sredAr = 0;
  for (int i = 1; i < size; ++i) {
    sredAr += arr[i];
  }
  sredAr = sredAr / (size / 2);
  return sredAr;
}
 
int main() {
  int *X, *Y, *Z, k, n, m;
    
  cout << "Введите размер массива X:";
  cin >> k;
  X = new int[k];
  cout << "Введите размер массива Y:";
  cin >> n;
  Y = new int[n];
  cout << "Введите размер массива Z:";
  cin >> m;
  Z = new int[m];
    
  for (int i = 0; i<k; ++i) {
    X[i] = rand();
  }
  for (int i = 0; i<n; ++i) {
    Y[i] = rand();
  }
  for (int i = 0; i<m; ++i) {
    Z[i] = rand();
  }
    
  cout << "Исходный массив X:" << endl;
  for (int i = 0; i<k; ++i) {
    cout << X[i] << " ";
  }
  cout << "Исходный массив Y:" << endl;
  for (int i = 0; i<n; ++i) {
    cout << Y[i] << " ";
  }
  cout << "Исходный массив Z:" << endl;
  for (int i = 0; i<m; ++i) {
    cout << Z[i] << " ";
  }
 
  cout << "Среднее арифметическое массива X=" << sredAr(X, k) << endl;
  cout << "Среднее арифметическое массива Y=" << sredAr(Y, n) << endl;
  cout << "Среднее арифметическое массива Z=" << sredAr(Z, m) << endl;

  return 0;
}
